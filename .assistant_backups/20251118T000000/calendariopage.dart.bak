import 'package:flutter/material.dart';
import 'TudoListPage.dart';

class CalendarPage extends StatefulWidget {
  const CalendarPage({super.key});

  @override
  State<CalendarPage> createState() => _CalendarPageState();
}

class _CalendarPageState extends State<CalendarPage> {
  DateTime _focusedDay = DateTime.now();

  List<DateTime> _generateDays(int days) {
    final List<DateTime> list = [];
    for (var i = 0; i < days; i++) {
      list.add(_focusedDay.add(Duration(days: i)));
    }
    return list;
  }

  @override
  Widget build(BuildContext context) {
    final days = _generateDays(30);

    return Scaffold(
      appBar: AppBar(title: const Text('CalendÃ¡rio')),
      body: ListView.builder(
        padding: const EdgeInsets.all(8),
        itemCount: days.length,
        itemBuilder: (context, index) {
          final day = days[index];
          final label = '${day.day}/${day.month}/${day.year}';
          return Card(
            child: ListTile(
              title: Text(label),
              onTap: () {
                Navigator.push(
                  context,
                  MaterialPageRoute(
                    builder: (context) => TodoListPage(selectedDate: day),
                  ),
                );
              },
            ),
          );
        },
      ),
    );
  }
}
